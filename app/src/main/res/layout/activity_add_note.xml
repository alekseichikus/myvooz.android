<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/AppTheme.AppBarOverlay"
    android:background="#fff">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="66dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/back_button"
                    android:background="?android:selectableItemBackground"
                    android:foreground="?android:selectableItemBackground"
                    android:clickable="true"
                    app:cardCornerRadius="30dp"
                    android:layout_gravity="center_vertical"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@android:color/transparent">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="10dp"
                        android:tint="#a1a4a5"
                        android:src="@drawable/ic_arrow_left_r"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:textSize="24sp"
                    android:fontFamily="@font/roboto_black"
                    android:layout_gravity="center_vertical"
                    android:textColor="#313435"
                    android:text="Создание заметки"/>
            </LinearLayout>
            <LinearLayout
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:clickable="true"
                android:layout_width="0px"
                android:layout_height="0px" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_margin="16dp"
                android:maxLength="64"
                android:id="@+id/edit_text"
                android:textColor="#313435"
                android:hint="Вкратце"
                android:textColorHint="#a1a4a5"
                android:background="@null"
                android:textSize="17dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:id="@+id/photos"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f1f4f5"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?android:selectableItemBackground"
                android:orientation="vertical"
                android:id="@+id/send_notification_button">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_text"
                        android:layout_gravity="center"
                        android:tint="#c2cbd5">
                    </ImageView>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:maxLength="256"
                        android:id="@+id/edit_text2"
                        android:textColor="#313435"
                        android:hint="Опишите более детально"
                        android:textColorHint="#a1a4a5"
                        android:background="@null"
                        android:textSize="17dp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f1f4f5"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?android:selectableItemBackground"
                android:orientation="vertical"
                android:id="@+id/select_object_button">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_books"
                        android:layout_gravity="center"
                        android:tint="#c2cbd5">
                    </ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:id="@+id/name_object_select"
                        android:textColor="#313435"
                        android:text="Выберите предмет"
                        android:fontFamily="@font/roboto_regular"
                        android:background="@null"
                        android:textSize="16dp"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_chevron_right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:tint="#919495"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?android:selectableItemBackground"
                android:orientation="vertical"
                android:id="@+id/date_select_button">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f1f4f5"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_clock"
                        android:layout_gravity="center"
                        android:tint="#c2cbd5">
                    </ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:id="@+id/date_select_text"
                        android:textColor="#313435"
                        android:text="Срок выполнения"
                        android:fontFamily="@font/roboto_regular"
                        android:background="@null"
                        android:textSize="16dp"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_chevron_right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:tint="#919495"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f1f4f5"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#f7f8f9"
                app:cardCornerRadius="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_user_lock"
                            android:layout_gravity="center"
                            android:tint="#c2cbd5">
                        </ImageView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#313435"
                            android:text="Кто имеет доступ к заметке"
                            android:layout_marginLeft="8dp"
                            android:fontFamily="@font/roboto_medium"
                            android:background="@null"
                            android:textSize="16dp"/>
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/recycler_list_view"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">
            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="25dp"
                android:id="@+id/camera_button"
                android:clickable="true"
                card_view:cardElevation="0dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="15dp"
                    android:alpha="0.6"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_camera_retro"
                    android:tint="#c2cbd5"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="25dp"
                android:layout_toRightOf="@+id/camera_button"
                android:clickable="true"
                android:id="@+id/load_image_button"
                app:cardBackgroundColor="#f7f8f9"
                android:foreground="?android:selectableItemBackground"
                android:layout_marginLeft="16dp"
                card_view:cardElevation="0dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="15dp"
                    android:alpha="1"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_images_s"
                    android:tint="#c2cbd5"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:id="@+id/load_data_block"
                    android:visibility="gone"
                    card_view:cardElevation="0dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:src="@drawable/ic_circle_notch"
                        android:id="@+id/load_data_block_image"
                        android:layout_gravity="center"
                        android:tint="#929ba5">
                    </ImageView>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="25dp"
                android:id="@+id/send_button"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:foreground="?android:selectableItemBackground"
                card_view:cardElevation="0dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_gray_linear">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/icon"
                        android:layout_margin="15dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_check"
                        android:tint="#fff"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>