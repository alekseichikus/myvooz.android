<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="ng.com.obkm.myvooz.profile.NotificationsFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:paddingLeft="16dp"
        android:background="#fff"
        android:paddingRight="8dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="8dp"
            android:textSize="24sp"
            android:fontFamily="@font/roboto_black"
            android:layout_centerVertical="true"
            android:textColor="#313435"
            android:text="Заметки"/>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:layout_centerVertical="true"
            card_view:cardElevation="0dp"
            android:id="@+id/add_button"
            android:src="@drawable/ic_filter"
            card_view:cardCornerRadius="20dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="gone"
                android:layout_margin="15dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_sort_alt"
                android:tint="#3ca4ff"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:background="@null"
            android:layout_centerVertical="true"
            card_view:cardElevation="0dp"
            android:id="@+id/completed_button"
            android:src="@drawable/ic_filter"
            card_view:cardCornerRadius="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Завершить"
                android:padding="10dp"
                android:textColor="#ef5757"
                android:fontFamily="@font/roboto_medium"
                android:textSize="16sp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:background="@null"
            android:layout_centerVertical="true"
            card_view:cardElevation="0dp"
            android:id="@+id/delete_button"
            android:src="@drawable/ic_filter"
            card_view:cardCornerRadius="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Удалить"
                android:padding="10dp"
                android:textColor="#ef5757"
                android:fontFamily="@font/roboto_medium"
                android:textSize="16sp"/>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:paddingLeft="16dp"
        android:paddingBottom="8dp"
        android:id="@+id/recycler_list_view"/>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="#fff"
        android:id="@+id/swipe_container">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="#f5f5f5">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">
                <include
                    android:visibility="gone"
                    layout="@layout/layout_not_auth"/>
                <include
                    android:id="@+id/layout_not_confirm_profile"
                    android:visibility="gone"
                    layout="@layout/layout_not_confirm_profile"/>
                <include
                    android:id="@+id/layout_empty"
                    layout="@layout/layout_note_empty"
                    android:visibility="gone"/>
                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/content_layout"
                    android:elevation="3dp"
                    android:divider="#f1f2f3"
                    android:dividerHeight="1dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e2e3e7"/>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="25dp"
                android:id="@+id/add_button_2"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="16dp"
                android:foreground="?android:selectableItemBackground"
                card_view:cardElevation="5dp"
                android:elevation="5dp"
                android:outlineAmbientShadowColor="#6ea9fc"
                android:outlineSpotShadowColor="#6ea9fc">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_gray_linear">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="15dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_plus"
                        android:tint="#fff"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</LinearLayout>