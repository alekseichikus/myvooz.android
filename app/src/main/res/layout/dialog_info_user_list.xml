<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@drawable/dialog_bg"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Выберите кому хотите отправить уведомление!"
            android:fontFamily="@font/roboto_bold"
            android:layout_gravity="center_vertical"
            android:textColor="#313435"
            android:textSize="18dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="1. Если получатель не выбран, то уведомление будет отправлено всей вашей группе."
        android:fontFamily="@font/roboto_regular"
        android:textColor="#313435"
        android:textSize="14dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="2. Если получатель выбран, то уведомление будет отправлено лично ему."
        android:fontFamily="@font/roboto_regular"
        android:textColor="#313435"
        android:textSize="14dp"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp"
        android:layout_marginTop="8dp"
        android:id="@+id/close_button">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_orange_linear">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="16sp"
                android:maxLines="1"
                android:fontFamily="@font/roboto_medium"
                android:text="Понятненько"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>