<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/back_button"
                android:background="?android:selectableItemBackground"
                android:foreground="?android:selectableItemBackground"
                android:clickable="true"
                app:cardCornerRadius="30dp"
                android:layout_gravity="center_vertical"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="10dp"
                    android:tint="#a1a4a5"
                    android:src="@drawable/ic_arrow_left_r"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="8dp"
                android:textSize="24sp"
                android:fontFamily="@font/roboto_black"
                android:layout_gravity="center_vertical"
                android:textColor="#313435"
                android:text="О приложении"/>
        </LinearLayout>
        <ImageView
            android:layout_width="150dp"
            android:id="@+id/image_load"
            android:layout_gravity="center_horizontal"
            android:layout_height="75dp"
            android:src="@drawable/logo_big" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="#99a1ab"
            android:text="Версия 1.0"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="16dp"
            android:layout_marginTop="16dp"
            android:paddingRight="16dp"
            android:foreground="?android:selectableItemBackground"
            android:id="@+id/privacy_policy_button"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_file_alt"
                android:layout_gravity="center"
                android:tint="#c2cbd5">
            </ImageView>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:textColor="#000"
                android:textSize="17sp"
                android:maxLines="1"
                android:layout_weight="0.4"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_regular"
                android:text="Политика конфиденциальности">

            </TextView>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_chevron_right"
                android:layout_gravity="center"
                android:tint="#919495">
            </ImageView>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f1f4f5">
        </View>

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="#99a1ab"
            android:text="РРРРРРРРазработано студентом УГА УГА УГАТУ"/>
    </LinearLayout>
</RelativeLayout>