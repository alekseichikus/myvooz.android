<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    app:cardElevation="0dp"
    app:cardCornerRadius="4dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#313435"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Войдите через"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/search_empty_classroom_button"
            android:paddingLeft="16dp"
            android:foreground="?android:selectableItemBackground"
            android:paddingRight="16dp"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/vk_auth_button"
                android:layout_gravity="center_horizontal"
                app:cardElevation="0dp"
                app:cardCornerRadius="25dp"
                app:cardBackgroundColor="#5186bb"
                android:stateListAnimator="@null">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_vk"
                    android:tint="#fff" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="16dp"
                android:id="@+id/ya_auth_button"
                android:layout_gravity="center_horizontal"
                app:cardElevation="0dp"
                app:cardCornerRadius="25dp"
                app:cardBackgroundColor="#ff3638"
                android:stateListAnimator="@null">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_yandex"
                    android:tint="#fff" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="16dp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="#99a1ab"
            android:text="Создавая учетную запись вы принимаете условия пользовательского соглашения"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>