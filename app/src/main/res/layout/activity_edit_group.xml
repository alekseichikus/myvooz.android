<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme.AppBarOverlay"
    android:background="#fff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/back_button"
                    android:background="?android:selectableItemBackground"
                    android:foreground="?android:selectableItemBackground"
                    android:clickable="true"
                    app:cardCornerRadius="30dp"
                    android:layout_gravity="center_vertical"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@android:color/transparent">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="10dp"
                        android:tint="#3f89de"
                        android:src="@drawable/ic_close"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/logout_group_button"
                    android:background="?android:selectableItemBackground"
                    android:foreground="?android:selectableItemBackground"
                    android:clickable="true"
                    android:layout_gravity="center_vertical"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@android:color/transparent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ff4b4b"
                        android:textSize="16sp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Покинуть"/>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </LinearLayout>
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:id="@+id/swipe_container">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:outlineAmbientShadowColor="#a1a4a5"
                        android:outlineSpotShadowColor="#a1a4a5"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="24dp"
                        android:background="#fafbfc"
                        app:cardBackgroundColor="#fff"
                        app:cardCornerRadius="16dp"
                        android:layout_marginBottom="24dp"
                        app:cardElevation="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:id="@+id/id_group_of_user"
                            android:layout_marginTop="16dp"
                            android:layout_marginRight="16dp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="#3456"
                            android:textColor="#c7c8c9"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="16dp">

                            <RelativeLayout
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center_horizontal">

                                <com.makeramen.roundedimageview.RoundedImageView
                                    android:id="@+id/user_photo_profile_2"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_centerInParent="true"
                                    android:alpha="0.1"
                                    android:scaleType="centerCrop"
                                    app:riv_corner_radius="50dp" />

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/image_block"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:layout_centerInParent="true"
                                    android:layout_gravity="center_vertical"
                                    app:cardBackgroundColor="#e7e8e9"
                                    app:cardCornerRadius="40dp"
                                    app:cardElevation="0dp">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_user"
                                        android:tint="#a7a8a9" />
                                </androidx.cardview.widget.CardView>

                                <com.makeramen.roundedimageview.RoundedImageView
                                    android:id="@+id/user_photo_profile"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:layout_centerInParent="true"
                                    android:elevation="4dp"
                                    android:scaleType="centerCrop"
                                    app:riv_corner_radius="40dp" />

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/plus_mark"
                                    android:layout_width="26dp"
                                    android:layout_height="26dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentBottom="true"
                                    android:layout_gravity="center_vertical"
                                    android:padding="5dp"
                                    app:cardBackgroundColor="#77a246"
                                    app:cardCornerRadius="13dp"
                                    app:cardElevation="0dp">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/gradient_orange_6_linear">

                                        <ImageView
                                            android:layout_width="14dp"
                                            android:layout_height="14dp"
                                            android:layout_centerInParent="true"
                                            android:src="@drawable/ic_plus"
                                            android:tint="#fff" />
                                    </RelativeLayout>
                                </androidx.cardview.widget.CardView>
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/group_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="16dp"
                                android:fontFamily="@font/roboto_bold"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp"
                                android:text="Лучшая группа"
                                android:textColor="#373839"
                                android:textSize="20sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginRight="16dp"
                                    android:paddingTop="8dp"
                                    android:paddingBottom="8dp"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/roboto_regular"
                                        android:layout_weight="0.5"
                                        android:text="Учебное заведение"
                                        android:textColor="#676869"
                                        android:textSize="16sp" />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/roboto_regular"
                                        android:layout_weight="0.5"
                                        android:id="@+id/university_name_3"
                                        android:text="УГОТУ"
                                        android:gravity="right"
                                        android:textColor="#5c9ce6"
                                        android:textSize="16sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="16dp"
                                    android:paddingRight="16dp"
                                    android:paddingTop="8dp"
                                    android:paddingBottom="8dp"
                                    android:background="#fafbfc"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/roboto_regular"
                                        android:layout_weight="0.5"
                                        android:text="Группа"
                                        android:textColor="#676869"
                                        android:textSize="16sp" />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/roboto_regular"
                                        android:layout_weight="0.5"
                                        android:text="ИББ-316"
                                        android:id="@+id/group_name_3"
                                        android:textColor="#5c9ce6"
                                        android:gravity="right"
                                        android:textSize="16sp" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="16dp"
                                    android:paddingRight="16dp"
                                    android:paddingTop="8dp"
                                    android:paddingBottom="8dp"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/roboto_regular"
                                        android:layout_weight="0.5"
                                        android:text="Количество"
                                        android:textColor="#676869"
                                        android:textSize="16sp" />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/roboto_regular"
                                        android:layout_weight="0.5"
                                        android:text="6"
                                        android:id="@+id/count_of_group"
                                        android:textColor="#5c9ce6"
                                        android:gravity="right"
                                        android:textSize="16sp" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="16dp"
                                    android:paddingRight="16dp"
                                    android:paddingTop="8dp"
                                    android:paddingBottom="8dp"
                                    android:background="#fafbfc"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/roboto_regular"
                                        android:layout_weight="0.5"
                                        android:text="Староста"
                                        android:textColor="#676869"
                                        android:textSize="16sp" />
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.5"
                                        android:orientation="horizontal">
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/roboto_regular"
                                            android:layout_weight="0.5"
                                            android:text="Мокшанцев Алексей"
                                            android:layout_marginRight="8dp"
                                            android:layout_gravity="center_vertical"
                                            android:maxLines="1"
                                            android:id="@+id/creator_name"
                                            android:textColor="#676869"
                                            android:gravity="right"
                                            android:textSize="16sp" />
                                        <RelativeLayout
                                            android:layout_width="22dp"
                                            android:layout_height="22dp"
                                            android:layout_gravity="center_vertical">
                                            <androidx.cardview.widget.CardView
                                                android:layout_width="22dp"
                                                android:layout_height="22dp"
                                                android:layout_centerInParent="true"
                                                android:layout_gravity="center_vertical"
                                                app:cardBackgroundColor="#e7e8e9"
                                                app:cardCornerRadius="11dp"
                                                app:cardElevation="0dp">
                                                <ImageView
                                                    android:layout_width="11dp"
                                                    android:layout_height="11dp"
                                                    android:layout_gravity="center"
                                                    android:src="@drawable/ic_user"
                                                    android:tint="#a7a8a9" />
                                            </androidx.cardview.widget.CardView>
                                            <com.makeramen.roundedimageview.RoundedImageView
                                                android:id="@+id/user_creator_photo_profile"
                                                android:layout_width="22dp"
                                                android:layout_height="22dp"
                                                android:layout_centerInParent="true"
                                                android:elevation="4dp"
                                                android:scaleType="centerCrop"
                                                app:riv_corner_radius="11dp" />
                                        </RelativeLayout>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:orientation="horizontal"
                                android:paddingTop="16dp"
                                android:layout_marginBottom="16dp">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.5"
                                    android:id="@+id/bell_button"
                                    android:orientation="horizontal"
                                    >
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.5"
                                        android:orientation="vertical">
                                        <ImageView
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:layout_gravity="center"
                                            android:src="@drawable/ic_bells"
                                            android:tint="#a7a8a9" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="4dp"
                                            android:fontFamily="@font/roboto_medium"
                                            android:gravity="center_horizontal"
                                            android:text="Уведомить"
                                            android:textColor="#767e88"
                                            android:textSize="14sp" />
                                    </LinearLayout>
                                    <View
                                        android:layout_width="1dp"
                                        android:layout_height="match_parent"
                                        android:background="#e1e2e3" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/users_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.5"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_users"
                                        android:tint="#c7c8c9" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:fontFamily="@font/roboto_medium"
                                        android:gravity="center_horizontal"
                                        android:text="Участники"
                                        android:textColor="#676869"
                                        android:textSize="14sp" />
                                </LinearLayout>

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="#e1e2e3" />

                                <LinearLayout
                                    android:id="@+id/invite_users_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.5"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_user_plus"
                                        android:tint="#c7c8c9" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:fontFamily="@font/roboto_medium"
                                        android:gravity="center_horizontal"
                                        android:text="Пригласить"
                                        android:textColor="#676869"
                                        android:textSize="14sp" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#fff"
                    app:cardElevation="0dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/change_group_name">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:paddingTop="16dp"
                                    android:paddingLeft="16dp"
                                    android:paddingRight="16dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:layout_gravity="center_vertical"
                                            android:src="@drawable/ic_heading"
                                            android:tint="#c7c8c9" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="16dp"
                                            android:fontFamily="@font/roboto_regular"
                                            android:paddingRight="16dp"
                                            android:text="Изменить название"
                                            android:textColor="#000"
                                            android:textSize="16sp" />
                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/change_group_of_user_name"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="8dp"
                                        android:fontFamily="@font/roboto_regular"
                                        android:paddingRight="48dp"
                                        android:text="Букаааашечка"
                                        android:textColor="#5c9ce6"
                                        android:textSize="16sp" />
                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:background="#f7f8f9"
                                        android:layout_marginTop="16dp"/>
                                </LinearLayout>
                            </LinearLayout>
                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_chevron_right"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="16dp"
                                android:tint="#a7a8a9"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/change_group">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="16dp"
                                    android:paddingLeft="16dp"
                                    android:paddingRight="16dp"
                                    android:orientation="vertical">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">
                                        <ImageView
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:src="@drawable/ic_users"
                                            android:layout_gravity="center_vertical"
                                            android:tint="#c7c8c9"/>
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:paddingLeft="16dp"
                                            android:paddingRight="16dp"
                                            android:textSize="16sp"
                                            android:fontFamily="@font/roboto_regular"
                                            android:textColor="#000"
                                            android:text="Изменить группу"/>
                                    </LinearLayout>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="8dp"
                                        android:id="@+id/group_name_2"
                                        android:paddingRight="16dp"
                                        android:textSize="16sp"
                                        android:fontFamily="@font/roboto_regular"
                                        android:textColor="#5c9ce6"
                                        android:text="ИБ-316"/>
                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_marginTop="16dp"
                                        android:background="#f7f8f9"/>
                                </LinearLayout>
                            </LinearLayout>
                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_chevron_right"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="16dp"
                                android:tint="#a7a8a9"/>
                        </RelativeLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </LinearLayout>

</RelativeLayout>