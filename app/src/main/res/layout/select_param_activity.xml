<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back_button"
            android:background="?android:selectableItemBackground"
            android:foreground="?android:selectableItemBackground"
            android:clickable="true"
            app:cardCornerRadius="30dp"
            android:layout_gravity="center_vertical"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:tint="#a1a4a5"
                android:src="@drawable/ic_arrow_left_r"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="9dp"
            android:layout_gravity="center_vertical"
            android:paddingRight="8dp"
            android:textSize="24sp"
            android:fontFamily="@font/roboto_black"
            android:textColor="#313435"
            android:text="Выберите свое учебное заведение и группу"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Университет"
            android:textColor="#a1a4a5"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="24dp"
            android:fontFamily="@font/roboto_regular"
            android:textSize="14sp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#f7f8f9"
            android:id="@+id/university_select"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:foreground="?android:selectableItemBackground"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"
            android:padding="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Уфимский государственный авиационный технический университет"
                android:layout_centerVertical="true"
                android:id="@+id/university_name"
                android:layout_marginRight="28dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="#414445"
                android:fontFamily="@font/roboto_regular"
                android:textSize="16sp"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@null"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_angle_down"
                android:tint="#a1a4a5" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Группа"
            android:textColor="#a1a4a5"
            android:layout_marginLeft="24dp"
            android:fontFamily="@font/roboto_regular"
            android:textSize="14sp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#f7f8f9"
            android:id="@+id/group_select"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:foreground="?android:selectableItemBackground"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"
            android:padding="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ИБ-316"
                android:layout_centerVertical="true"
                android:id="@+id/group_name"
                android:layout_marginRight="28dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="#414445"
                android:fontFamily="@font/roboto_regular"
                android:textSize="16sp"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@null"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_angle_down"
                android:tint="#a1a4a5" />
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:foreground="?android:selectableItemBackground"
            android:id="@+id/send_confirm"
            android:paddingRight="32dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            app:cardBackgroundColor="#8e62ff"
            app:cardCornerRadius="4dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:layout_gravity="center_horizontal"
                android:paddingTop="16dp"
                android:text="Внести изменения"
                android:textColor="#fff"
                android:fontFamily="@font/roboto_medium"
                android:textSize="17sp"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>