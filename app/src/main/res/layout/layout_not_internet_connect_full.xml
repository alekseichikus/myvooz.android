<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="200dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_wifi_slash"
            android:tint="#9aa2ad"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily='@font/roboto_medium'
            android:layout_gravity="center_horizontal"
            android:textColor="#414445"
            android:textSize="17sp"
            android:gravity="center_horizontal"
            android:text="Что-то пошло не так"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily='@font/roboto_regular'
            android:layout_gravity="center_horizontal"
            android:textColor="#414445"
            android:textSize="15sp"
            android:gravity="center_horizontal"
            android:text="Проверьте соединение с интернетом"/>

        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:foreground="?android:selectableItemBackground"
            android:id="@+id/reconnect_button"
            android:layout_margin="16dp"
            android:layout_gravity="center_horizontal"
            app:cardBackgroundColor="#8e62ff"
            app:cardCornerRadius="20dp"
            android:layout_height="40dp">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_sync_alt"
                android:tint="#fff"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>
