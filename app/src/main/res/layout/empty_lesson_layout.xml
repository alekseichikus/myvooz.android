<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:foreground="?android:selectableItemBackground"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:id="@+id/lesson_row"
    android:orientation="horizontal">
    <androidx.cardview.widget.CardView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cardCornerRadius="8dp"
        android:layout_gravity="center_vertical"
        android:id="@+id/number_block"
        app:cardBackgroundColor="#f1f2f3"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:cardElevation="0dp">
        <androidx.cardview.widget.CardView
            android:layout_width="38dp"
            android:layout_height="38dp"
            app:cardCornerRadius="7dp"
            app:cardBackgroundColor="#f7f8f9"
            android:layout_gravity="center"
            app:cardElevation="0dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#616465"
                android:id="@+id/item_number_lesson"
                android:text="1"
                android:fontFamily="@font/roboto_bold"/>
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="#929ba5"
            android:id="@+id/item_type_lesson"
            android:textSize="14sp"
            android:fontFamily="@font/roboto_regular"
            android:textStyle="normal"/>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="#f7f8f9"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:cardBackgroundColor="#e1e4e5"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_clock"
                        android:tint="#b1b4b5" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/time_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="8dp"
                    android:fontFamily="@font/roboto_regular"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="#626b75"
                    android:textSize="14sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>