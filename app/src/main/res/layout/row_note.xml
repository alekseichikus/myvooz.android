<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="54dp"
        android:layout_height="match_parent"
        android:id="@+id/select_button">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/state_line">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/back_main_2"
                android:alpha="0.25"
                android:scaleType="centerCrop"/>
        </FrameLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/select_button_2"
            card_view:cardBackgroundColor="#e1e2e3"
            android:layout_centerInParent="true"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="0dp">
            <androidx.cardview.widget.CardView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:id="@+id/select_state"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="0dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:src="@drawable/ic_check"
                    android:tint="#fff"/>
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingRight="16dp"
        android:paddingBottom="12dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Защита и обработка документов ограниченного доступа"
            android:textColor="#5c9ce6"
            android:id="@+id/item_name_object_note"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:textAllCaps="true"
            android:fontFamily="@font/roboto_medium"
            android:textStyle="normal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Контрольная работа"
            android:textColor="#313435"
            android:id="@+id/item_name_note"
            android:layout_gravity="center_vertical"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginTop="4dp"
            android:textStyle="normal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Контрольная работа"
            android:textColor="#313435"
            android:id="@+id/item_text_note"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginTop="4dp"
            android:textStyle="normal"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/photos"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="#f7f8f9"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                card_view:cardElevation="0dp"
                android:padding="4dp"
                card_view:cardCornerRadius="16dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        card_view:cardCornerRadius="12dp"
                        card_view:cardBackgroundColor="#e1e4e5"
                        card_view:cardElevation="0dp">
                        <ImageView
                            android:layout_width="11dp"
                            android:layout_height="11dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_clock"
                            android:tint="#a1a4a5" />
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:layout_height="wrap_content"
                        android:text="Пн, 28.08 в 10:30"
                        android:id="@+id/item_date"
                        android:layout_gravity="center_vertical"
                        android:textColor="#626b75"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="4dp"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="14sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="#f7f8f9"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:id="@+id/group_mark"
                card_view:cardElevation="0dp"
                android:layout_marginLeft="8dp"
                android:padding="4dp"
                card_view:cardCornerRadius="16dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        card_view:cardCornerRadius="12dp"
                        android:id="@+id/mark_me_cv"
                        card_view:cardBackgroundColor="#e1e4e5"
                        card_view:cardElevation="0dp">
                        <ImageView
                            android:layout_width="11dp"
                            android:layout_height="11dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_user"
                            android:tint="#a1a4a5" />
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:layout_height="wrap_content"
                        android:text="ПКМ-312"
                        android:id="@+id/group_mark_name"
                        android:layout_gravity="center_vertical"
                        android:textColor="#626b75"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="4dp"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="14sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>