<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/AppTheme.AppBarOverlay"
    android:background="#fff">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="66dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/back_button"
                    android:background="?android:selectableItemBackground"
                    android:foreground="?android:selectableItemBackground"
                    android:clickable="true"
                    app:cardCornerRadius="30dp"
                    android:layout_gravity="center_vertical"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@android:color/transparent">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="10dp"
                        android:tint="#a1a4a5"
                        android:src="@drawable/ic_arrow_left_r"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:textSize="24sp"
                    android:fontFamily="@font/roboto_black"
                    android:layout_gravity="center_vertical"
                    android:textColor="#313435"
                    android:text="Настройка уведомлений"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Заметки"
                android:fontFamily="@font/roboto_bold"
                android:textSize="16sp"
                android:paddingTop="0dp"
                android:layout_marginTop="16dp"
                android:paddingLeft="16dp"
                android:paddingBottom="4dp"
                android:textColor="@color/colorUnSelected"/>

            <LinearLayout
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Создана заметка"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="16sp"
                        android:paddingBottom="4dp"
                        android:textColor="#313435"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Приложение пришлет уведомление о том, что была создана новая заметка"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="16sp"
                        android:textColor="#a1a4a5"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>
                <Switch
                    android:layout_width="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_weight="0.7"
                    android:theme="@style/SCBSwitch"
                    android:id="@+id/switch_create_note"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">
                </Switch>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f1f4f5">
            </View>


            <LinearLayout
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Заметка изменена"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="16sp"
                        android:paddingBottom="4dp"
                        android:textColor="#313435"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Приложение пришлет уведомление о том, что заметка была изменена"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="16sp"
                        android:textColor="#a1a4a5"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>
                <Switch
                    android:layout_width="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_weight="0.7"
                    android:theme="@style/SCBSwitch"
                    android:id="@+id/switch_change_note"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">
                </Switch>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f1f4f5">
            </View>

            <LinearLayout
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Срок заметки"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="16sp"
                        android:paddingBottom="4dp"
                        android:textColor="#313435"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Приложение пришлет уведомление о том, что приближается срок выполнения заметки"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="16sp"
                        android:textColor="#a1a4a5"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>
                <Switch
                    android:layout_width="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_weight="0.7"
                    android:theme="@style/SCBSwitch"
                    android:id="@+id/switch_term_note"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">
                </Switch>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>