<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="ng.com.obkm.myvooz.profile.NotificationsFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                card_view:cardCornerRadius="16dp"
                card_view:cardElevation="8dp"
                android:outlineAmbientShadowColor="#a1a4a5"
                android:outlineSpotShadowColor="#a1a4a5">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/change_user_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="2dp"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical">

                            <com.makeramen.roundedimageview.RoundedImageView
                                android:id="@+id/user_photo_profile"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:scaleType="centerCrop"
                                app:riv_corner_radius="25dp" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                app:cardCornerRadius="25dp"
                                android:id="@+id/image_block"
                                android:layout_gravity="center_vertical"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="#e7e8e9">
                                <ImageView
                                    android:layout_width="17dp"
                                    android:layout_height="17dp"
                                    android:src="@drawable/ic_user"
                                    android:tint="#a7a8a9"
                                    android:layout_gravity="center"/>
                            </androidx.cardview.widget.CardView>
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_toRightOf="@+id/image_block"
                            android:layout_weight="0.4"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/name_profile"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="14dp"
                                    android:fontFamily="@font/roboto_black"
                                    android:text="ИБ-316"
                                    android:textColor="#373839"
                                    android:textSize="17sp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/type_profile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="14dp"
                                android:fontFamily="@font/roboto_regular"
                                android:text="Группа"
                                android:textColor="#5c9ce6"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/marker_new_request_confirm"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="8dp"
                            android:visibility="gone"
                            app:cardBackgroundColor="#80bd68"
                            app:cardCornerRadius="13dp"
                            app:cardElevation="0dp"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/edit_button"
                            card_view:cardCornerRadius="20dp"
                            card_view:cardBackgroundColor="@android:color/transparent"
                            card_view:cardElevation="0dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="21dp"
                                android:layout_margin="10dp"
                                android:src="@drawable/ic_cog"
                                android:tint="#a7a8a9" />
                        </androidx.cardview.widget.CardView>
                        <ImageView
                            android:id="@+id/edit_2_button"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_chevron_right"
                            android:tint="#a7a8a9"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/info_group_block"
                        android:visibility="gone"
                        android:orientation="vertical">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:background="#f7f8f9" />
                        <LinearLayout
                            android:id="@+id/group_of_user_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:elevation="2dp"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical">
                                <androidx.cardview.widget.CardView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    app:cardCornerRadius="12dp"
                                    android:layout_gravity="center_vertical"
                                    app:cardElevation="0dp"
                                    app:cardBackgroundColor="#e7e8e9">
                                    <ImageView
                                        android:layout_width="10dp"
                                        android:layout_height="10dp"
                                        android:src="@drawable/ic_user"
                                        android:tint="#a7a8a9"
                                        android:layout_gravity="center"/>
                                </androidx.cardview.widget.CardView>
                                <com.makeramen.roundedimageview.RoundedImageView
                                    android:id="@+id/group_photo_profile"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:scaleType="centerCrop"
                                    app:riv_corner_radius="12dp" />
                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_toRightOf="@+id/image_block"
                                android:layout_weight="0.4"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/group_name_profile"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="14dp"
                                    android:fontFamily="@font/roboto_medium"
                                    android:text="Лучшая группа"
                                    android:textColor="#373839"
                                    android:textSize="16sp" />
                                <TextView
                                    android:id="@+id/name_group_profile"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="14dp"
                                    android:fontFamily="@font/roboto_regular"
                                    android:text="Группа"
                                    android:textColor="#5c9ce6"
                                    android:textSize="14sp" />
                            </LinearLayout>
                            <ImageView
                                android:id="@+id/edit_button"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_chevron_right"
                                android:tint="#a7a8a9"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/info_block"
                        android:orientation="vertical">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:background="#f7f8f9" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp">
                            <TextView
                                android:id="@+id/university_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:ellipsize="end"
                                android:fontFamily="@font/roboto_medium"
                                android:maxLines="1"
                                android:text="УГАТУ"
                                android:textColor="#676869"
                                android:textSize="16sp" />
                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#f7f8f9"/>
                            <TextView
                                android:id="@+id/group_name"
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="center_horizontal"
                                android:text="ИБ-316"
                                android:textColor="#5c9ce6"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:id="@+id/change_group_dont_gou_button"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="8dp"
                android:outlineSpotShadowColor="#616465"
                android:outlineAmbientShadowColor="#616465"
                card_view:cardBackgroundColor="#fff">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:paddingLeft="16dp"
                    android:foreground="?android:selectableItemBackground"
                    android:paddingRight="16dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:maxLines="1"
                        android:layout_weight="0.4"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Изменить группу"/>

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_chevron_right"
                        android:layout_gravity="center"
                        android:tint="#a7a8a9"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:id="@+id/group_block"
                android:weightSum="1">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="16dp"
                    card_view:cardElevation="5dp"
                    android:layout_marginLeft="16dp"
                    android:id="@+id/create_group_button"
                    android:layout_marginRight="5dp"
                    android:outlineAmbientShadowColor="#616465"
                    android:outlineSpotShadowColor="#616465"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="0.5">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:background="@drawable/gradient_orange_7_linear"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="16dp"
                            android:layout_marginTop="8dp"
                            android:src="@drawable/ic_user_plus_r"
                            android:alpha="0.8"
                            android:tint="#74b04c"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:textSize="16dp"
                            android:text="Создать группу"
                            android:lines="2"
                            android:fontFamily="@font/roboto_bold"
                            android:textColor="#313435"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:text="Быстро и легко"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="#a0a6b1"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="16dp"
                    android:layout_marginRight="16dp"
                    android:id="@+id/join_group_button"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:outlineAmbientShadowColor="#616465"
                    card_view:cardElevation="5dp"
                    android:outlineSpotShadowColor="#616465"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="0.5">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:background="@drawable/gradient_orange_10_linear"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="16dp"
                            android:layout_marginTop="8dp"
                            android:src="@drawable/ic_r_users"
                            android:alpha="0.8"
                            android:tint="#fff"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:textSize="16dp"
                            android:lines="2"
                            android:text="Присоединиться к группе"
                            android:fontFamily="@font/roboto_bold"
                            android:textColor="#fff"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:text="По ссылке"
                            android:alpha="0.8"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="#fff"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardElevation="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:id="@+id/search_empty_classroom_button"
                        android:paddingLeft="16dp"
                        android:foreground="?android:selectableItemBackground"
                        android:paddingRight="16dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_search"
                            android:layout_gravity="center"
                            android:tint="#c7c8c9"/>
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="16dp"
                            android:textColor="#000"
                            android:textSize="16sp"
                            android:maxLines="1"
                            android:layout_weight="0.4"
                            android:ellipsize="end"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Найти свободные аудитории">

                        </TextView>

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_chevron_right"
                            android:layout_gravity="center"
                            android:tint="#a7a8a9"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:layout_marginTop="8dp"
                        android:foreground="?android:selectableItemBackground"
                        android:id="@+id/setting_button"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_bells"
                            android:layout_gravity="center"
                            android:tint="#c7c8c9">
                        </ImageView>
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="16dp"
                            android:textColor="#000"
                            android:textSize="16sp"
                            android:maxLines="1"
                            android:layout_weight="0.4"
                            android:ellipsize="end"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Настройка уведомлений">

                        </TextView>

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_chevron_right"
                            android:layout_gravity="center"
                            android:tint="#a7a8a9">
                        </ImageView>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#f1f4f5">
                    </View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:foreground="?android:selectableItemBackground"
                        android:id="@+id/vk_group_button"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_vk"
                            android:layout_gravity="center"
                            android:tint="#5c9ce6">
                        </ImageView>
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="16dp"
                            android:textColor="#000"
                            android:textSize="16sp"
                            android:maxLines="1"
                            android:layout_weight="0.4"
                            android:ellipsize="end"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Сообщество в вк"/>

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_chevron_right"
                            android:layout_gravity="center"
                            android:tint="#a7a8a9"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#f1f4f5">
                    </View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:foreground="?android:selectableItemBackground"
                        android:id="@+id/about_info_button"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_info_circle_s"
                            android:layout_gravity="center"
                            android:tint="#c7c8c9">
                        </ImageView>
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="16dp"
                            android:textColor="#000"
                            android:textSize="16sp"
                            android:maxLines="1"
                            android:layout_weight="0.4"
                            android:ellipsize="end"
                            android:fontFamily="@font/roboto_regular"
                            android:text="О приложении"/>

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_chevron_right"
                            android:layout_gravity="center"
                            android:tint="#a7a8a9"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#f1f4f5">
                    </View>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_button_1"
                android:visibility="gone"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="16dp"
                    card_view:cardCornerRadius="16dp"
                    card_view:cardElevation="5dp"
                    android:outlineAmbientShadowColor="#676869"
                    android:outlineSpotShadowColor="#676869">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/logo_big"
                        android:layout_gravity="center"/>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="16dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:maxLines="1"
                        android:layout_weight="0.4"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Сообщество МОЙ ВУЗ"/>
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="#a7a8a9"
                        android:textSize="16sp"
                        android:layout_weight="0.4"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Самая актуальная информация"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>