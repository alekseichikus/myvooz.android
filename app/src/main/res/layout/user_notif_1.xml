<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingTop="12dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="12dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="25dp"
                    android:id="@+id/image_block"
                    card_view:cardBackgroundColor="#f7f8f9"
                    card_view:cardElevation="0dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/icon"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_users"
                        android:tint="#919495"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/photo"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"/>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="8dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/important_mark"
                    android:layout_gravity="bottom"
                    card_view:cardBackgroundColor="#eb4242"
                    android:visibility="gone"
                    card_view:cardElevation="0dp">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:padding="3dp"
                        android:src="@drawable/ic_exclamation"
                        android:tint="#fff"/>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
            <TextView
                android:id="@+id/title"
                android:textSize="16sp"
                android:layout_marginLeft="8dp"
                android:fontFamily="@font/roboto_medium"
                android:layout_gravity="center_vertical"
                android:textColor="#313435"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:weightSum="1">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:id="@+id/block_1">

                <TextView
                    android:textSize="16sp"
                    android:id="@+id/text"
                    android:textColorLink="@color/colorLink"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_gravity="center_vertical"
                    android:autoLink="all"
                    android:textColor="#313435"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:id="@+id/photos"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        card_view:cardBackgroundColor="#f7f8f9"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        card_view:cardElevation="0dp"
                        android:padding="4dp"
                        card_view:cardCornerRadius="16dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <androidx.cardview.widget.CardView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                card_view:cardCornerRadius="12dp"
                                card_view:cardBackgroundColor="#e1e4e5"
                                card_view:cardElevation="0dp">
                                <ImageView
                                    android:layout_width="10dp"
                                    android:layout_height="10dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_clock"
                                    android:tint="#b1b4b5" />
                            </androidx.cardview.widget.CardView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:layout_height="wrap_content"
                                android:text="Пн, 28.08 в 10:30"
                                android:id="@+id/date"
                                android:layout_gravity="center_vertical"
                                android:textColor="#626b75"
                                android:layout_marginRight="8dp"
                                android:layout_marginLeft="4dp"
                                android:fontFamily="@font/roboto_regular"
                                android:textSize="14sp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:layout_height="wrap_content"
                        android:text="Лично мне"
                        android:id="@+id/mark_me"
                        android:layout_gravity="center_vertical"
                        android:textColor="#929ba5"
                        android:layout_marginLeft="16dp"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="14sp"/>
                </LinearLayout>

            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:id="@+id/image_notif_block"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/block_1"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                card_view:cardCornerRadius="4dp"
                android:outlineAmbientShadowColor="#929ba5"
                android:outlineSpotShadowColor="#929ba5"
                android:background="#f1f2f3">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:id="@+id/image_notif"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_toRightOf="@+id/image_block"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="#f5f8f9"
                android:layout_marginLeft="8dp"
                android:id="@+id/button"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:visibility="gone"
                card_view:cardCornerRadius="3dp"
                card_view:cardElevation="0dp">
                <TextView
                    android:textSize="15sp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"

                    android:fontFamily="@font/roboto_medium"
                    android:layout_gravity="center_vertical"
                    android:textColor="#616465"
                    android:text="Читать статью"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>