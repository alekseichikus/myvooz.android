<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">#5d76cb</item>
        <item name="colorPrimaryDark">#5d76cb</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorLinkInverse">@color/colorLink</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorLink">@color/colorLink</item>
        <item name="android:textColorLinkInverse">@color/colorLink</item>
    </style>

    <style name="AppTheme2" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#000000</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorAccent">#5c9ce6</item>
        <item name="colorPrimaryDark">#5c9ce6</item>
        <item name="colorPrimary">#5c9ce6</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/splash_background</item>
        <item name="colorAccent">#8693f9</item>
    </style>


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">#5c9ce6</item>
    </style>


    <style name="AppTheme.PopupOverlay2" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">#e1e4e5</item>
    </style>

    <style name="Dialog.Theme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#5c9ce6</item>
    </style>

    <style name="MyDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    
    <style name="splashStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimaryDark">@color/splash_background</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>
</resources>
